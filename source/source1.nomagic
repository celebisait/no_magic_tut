   plt.ylabel('$f(x)$', size=20)
   plt.title('Some arbitrary function', size=18)
   plt.plot(xs, f(xs), label=r'$f(x)= x^2 + 6x + 5$')
   plt.scatter([6], [f(6)], c='red', s=50)
   plt.legend(loc='upper left', fontsize=17)
   plt.savefig('image.png')

plot_func()

