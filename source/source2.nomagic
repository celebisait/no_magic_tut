              [-6.27, -2.35]])

b = np.array([[ 1.2  ],
              [ 2.93 ],
              [-4.14 ]])

Z, A = forward_propagate(X, Y_one_hot, W, b)
print(Y_one_hot[:,0:10])
print(A[:,0:10])

