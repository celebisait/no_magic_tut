b = np.zeros((3, 1))

losses = []
for i in range(100):
  Z, A = forward_propagate(X, Y_one_hot, W, b)
  dW, db, L = get_gradients(Y_one_hot, Z, A)
  W, b = gradient_descent(W, b, dW, db, ALPHA)
  losses.append(L)

